@model Empregare.ViewModel.Cadastro

@{ ViewData["Title"] = "Cadastro";
    Layout = "_LayoutNulo"; }

<div id="cadastro" class="cadastro">
    <div class="cadastro-content">
        <div class="row">
            <div class="col-12">
                <div class="form-group titulo">
                    <h1 class="text-center">Cadastro de usuário</h1>
                    <h5 class="text-center">Insira suas informações de login</h5>
                </div>
                <form asp-controller="Usuarios" asp-action="Cadastro" method="post" enctype="multipart/form-data">
                    <div class="formCadastro text-left">

                        <div class="form-group divCadastro">
                            <label asp-for="Nome" class="control-label"></label>
                            <input type="text" asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="form-group divCadastro">
                            <label asp-for="Telefone" class="control-label"></label>
                            <input type="text" asp-for="Telefone" class="form-control" />
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>

                        <div class="form-group divCadastro">
                            <label asp-for="Email" class="control-label"></label>
                            <input type="email" asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group divCadastro">
                            <label asp-for="Senha" class="control-label"></label>
                            <input type="password" asp-for="Senha" class="form-control" />
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>

                        <div class="form-group divCadastro">
                            <label asp-for="ConfirmarSenha" class="control-label"></label>
                            <input type="password" asp-for="ConfirmarSenha" class="form-control" />
                            <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
                        </div>

                        <div class="form-group divCadastro" style="margin-top:45px;">
                            <input type="submit" value="Cadastrar" id="cadastrar" class="btn btn-block btn-primary" />
                        </div>
                        <div class="form-group divCadastro text-center">
                            <a class="text-dark text-decoration-none" asp-action="Index">Voltar</a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js" integrity="sha512-pHVGpX7F/27yZ0ISY+VVjyULApbDlD0/X0rgGbTqCE7WFW5MezNTWG/dnhtbBuICzsd0WQPgpE4REBLv+UqChw==" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            $('#Telefone').mask('(00) 00000-0000');
        });
    </script>
}

