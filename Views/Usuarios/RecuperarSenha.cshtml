@model Empregare.ViewModel.RecuperarSenha

@{
    ViewData["Title"] = "Recuperar Senha";
}

<form asp-action="RecuperarSenha">
    <div class="account-wall">
        <div class="form-group title">
            <h1 class="text-center">Recuperar Senha</h1>
            <h5 class="text-center">Recupere seu acesso com o e-mail</h5>
        </div>
        @{
            if (ViewBag.MsgSuccess != null)
            {
                <div class="msgSuccess divSpaceMargin">@ViewBag.MsgSuccess</div>
            }

            if (TempData["Erro"] != null)
            {
                <div class="msgErro divSpaceMargin">@TempData["Erro"]</div>
            }

        }
        <br>
        <div class="form-group divSpaceMargin">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group divSpaceMargin">
            <input type="submit" value="Enviar" class="btn btn-success" />
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
