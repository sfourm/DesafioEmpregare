@model Empregare.Models.Usuario

@{
    Layout = "_LayoutNotLogin";
    ViewData["Title"] = "Usuário Logado";
}

<div class="account-wall">
    <div class="form-group title">
        <h1 class="text-center">Usuário logado</h1>
        <h5 class="text-center">Bem vindo @Model.Nome</h5>
    </div>
    <div class="form-group divSpaceMargin">
        <label class="control-label">Nome</label>
        <p><span class="form-text">@Model.Nome</span></p>
    </div>
    <div class="form-group divSpaceMargin">
        <label class="control-label">Telefone</label>
        <p><span id="telefone" class="form-text">@Model.Telefone</span></p>
    </div>
    <div class="form-group divSpaceMargin">
        <label class="control-label">E-mail</label>
        <p><span class="form-text">@Model.Email</span></p>
    </div>

    <div class="form-group divSpaceMargin">
        <a class="btn btn-info" asp-action="EditarSenha" asp-route-id="@Model.UsuarioId">Editar Senha</a>
        <a class="btn btn-info" asp-action="EditarPerfil" asp-route-id="@Model.UsuarioId">Editar Perfil</a>
        <a class="btn btn-danger" asp-action="">Deslogar</a>
    </div>
</div>

