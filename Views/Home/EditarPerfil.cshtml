@model Empregare.Models.Usuario

@{
    Layout = "_LayoutNotLogin";
    ViewData["Title"] = "Editar Perfil";
}

<form asp-action="EditarPerfil">
    <div class="account-wall">
        <input type="hidden" asp-for="UsuarioId" class="form-control" />
        <input type="hidden" asp-for="Email" class="form-control" />
        <input type="hidden" asp-for="Senha" class="form-control" />


        <div class="form-group divSpaceMargin">
            <label class="control-label">Nome</label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>


        <div class="form-group divSpaceMargin">
            <label class="control-label">Telefone</label>
            <input id="telefone" asp-for="Telefone" class="form-control" />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>

        <div class="form-group divSpaceMargin">
            <label class="control-label">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group divSpaceMargin">
            <input type="submit" value="Salvar" class="btn btn-block btn-primary" />
        </div>

        <div class="form-group divSpaceMargin text-center">
            <a asp-action="Perfil">Voltar</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
