@model Empregare.ViewModel.EditarSenha

@{
    Layout = "_LayoutNotLogin";
    ViewData["Title"] = "Editar Senha";
}

<form asp-action="EditarSenha" method="post">
    <input type="hidden" asp-for="UsuarioId" />
    <div class="account-wall">
        <div class="form-group title">
            <h1 class="text-center">Editar usuário</h1>
            <h5 class="text-center">Altere a sua senha de acesso</h5>
        </div>

        <div class="form-group divSpaceMargin">
            <label asp-for="Senha" class="control-label"></label>
            <input type="password" asp-for="Senha" class="form-control" />
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>

        <div class="form-group divSpaceMargin">
            <label asp-for="ConfirmarSenha" class="control-label"></label>
            <input type="password" asp-for="ConfirmarSenha" class="form-control" />
            <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
        </div>

        <div class="form-group divSpaceMargin" style="margin-top:45px;">
            <input type="submit" value="Salvar" class="btn btn-block btn-primary" />
        </div>
        <div class="form-group divSpaceMargin text-center">
            <a asp-action="EditarPerfil">Voltar</a>
        </div>
    </div>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
